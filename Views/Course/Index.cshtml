@model IEnumerable<MVC.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    <a href="/Students/Index" class="btn btn-success">Students Data</a> |
    <a href="/Department/Index" class="btn btn-success">Department Data</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CrsName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CrsName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CrsId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id = item.CrsId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CrsId }, new { @class = "btn btn-danger" }) |
            @Html.ActionLink("AddDept", "AddDept", new { id = item.CrsId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("RemoveDept", "RemoveDept", new { id = item.CrsId }, new { @class = "btn btn-danger" })

        </td>
    </tr>
}

</table>
